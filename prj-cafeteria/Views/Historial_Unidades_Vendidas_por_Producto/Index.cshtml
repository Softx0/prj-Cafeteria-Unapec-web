@model IEnumerable<prj_cafeteria.Models.Historial_Unidades_Vendidas_por_Producto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Historial Unidades Vendidas X Productos</h2>

<div class="row">
    <div class="col-lg-12">
        <form method="get">
            <input type="text" id="Criterio" name="Criterio" />
            <input type="submit" id="cmdBuscarV" name="BuscarV" placeholder="producto" value="Filtrar" class="btn btn-primary" />
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCION)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPCION)
            </td>
            @*
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DESCRIPCION }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DESCRIPCION }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DESCRIPCION })
                </td>
            *@
        </tr>
    }
    <tfoot>
        <tr>
            <td>
                @Html.ActionLink("Volver Atras", "Index", "DetalleFacturas")
            </td>
        </tr>
    </tfoot>

</table>
